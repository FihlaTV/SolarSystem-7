<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/zero_dp"
    android:background="@drawable/planet_cardview_background">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:background="@drawable/planet_cardview_background"
        card_view:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/zero_dp"
            android:background="@drawable/planet_cardview_background">
            <ImageView
                android:layout_width="@dimen/item_image_size"
                android:layout_height="@dimen/item_image_size"
                android:id="@+id/planet_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/planet"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/planet_name"
                android:layout_toRightOf="@+id/planet_image"
                android:layout_toEndOf="@+id/planet_image"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_age"
                android:layout_toRightOf="@+id/planet_image"
                android:layout_toEndOf="@+id/planet_image"
                android:layout_below="@+id/planet_name" /> -->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
